<?xml version="1.0" encoding="utf-8"?><!--单选列表样式一-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_base_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/popup_drawable_normal_radius_false_stroke_false_cancel_selector"
        android:padding="15dp">

        <!--名称-->
        <TextView
            android:id="@+id/txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/img_selected"
            android:layout_toStartOf="@+id/img_selected"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="#6299FF"
            android:textSize="16sp"
            tools:text="全部" />

        <!--图标-->
        <ImageView
            android:id="@+id/img_selected"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:scaleType="fitXY"
            android:src="@drawable/icon_selected"
            android:visibility="visible"
            tools:ignore="ContentDescription" />

    </RelativeLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#E0E0E0" />

</LinearLayout>