<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/dialog_color_5096F5"/>
            <gradient
                android:angle="0"
                android:endColor="@color/dialog_color_5096F5"
                android:startColor="@color/dialog_color_50BDF5" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/dialog_color_5E98EE"/>
            <gradient
                android:angle="180"
                android:endColor="@color/dialog_color_5096F5"
                android:startColor="@color/dialog_color_50BDF5" />
        </shape>
    </item>
</selector>